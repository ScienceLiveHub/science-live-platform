# # Backend

# Defaults for local dev
PORT=3001
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:3001

# REQUIRED: generate your own secret here: https://www.better-auth.com/docs/installation#set-environment-variables
BETTER_AUTH_SECRET=REPLACE_WITH_RANDOM_STRING

# REQUIRED: Replace with your actual db string
DATABASE_URL='postgresql://neondb_owner:PASSWORD123@example-database-url-12345.us-west-1.aws.neon.tech/science-live-platform?sslmode=require&channel_binding=require'

# OPTIONAL: Cloudflare deployment
CLOUDFLARE_API_TOKEN=REPLACE_OR_REMOVE
CLOUDFLARE_ACCOUNT_ID=REPLACE_OR_REMOVE
WRANGLER_SEND_METRICS=false

# OPTIONAL: ORCID OIDC provider
ORCID_CLIENT_ID=REPLACE_OR_REMOVE
ORCID_CLIENT_SECRET=REPLACE_OR_REMOVE

# OPTIONAL: Resend for sending verification emails
RESEND_API_KEY=REPLACE_OR_REMOVE
