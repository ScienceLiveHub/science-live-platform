{
  "name": "science-live-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "api"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "dev:api": "npm run dev --workspace=api",
    "dev:api-bun": "npm run dev-bun --workspace=api",
    "build": "npm run build --workspace=frontend",
    "test": "npm run test --workspaces",
    "postinstall": "bash scripts/build-nanopub-deps.sh",
    "build:nanopub": "bash scripts/build-nanopub-deps.sh",
    "check:frontend": "npm --workspace=frontend run check",
    "check:api": "npm --workspace=api run check",
    "deploy:frontend": "npm --workspace=frontend run deploy",
    "deploy:api": "npm --workspace=api run deploy",
    "deploy": "npm run deploy:frontend && npm run deploy:api"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "typescript": "^5.9.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@sciencelivehub/nanopub-create": "github:ScienceLiveHub/nanopub-create#update-packages",
    "@sciencelivehub/nanopub-view": "github:ScienceLiveHub/nanopub-view#update-packages",
    "dotenv": "^17.2.3"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-organize-imports"
    ]
  }
}
